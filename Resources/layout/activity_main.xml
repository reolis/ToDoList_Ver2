<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1D9FF">

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="4">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:src="@layout/star"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_rowSpan="4"
            android:layout_columnSpan="4"
            android:layout_gravity="center"
            android:scaleX="-1"
            android:src="@layout/star"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_rowSpan="2"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:src="@layout/star"/>
    </GridLayout>

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="#F2BBBB"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#F2BBBB"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:text="Your task is here!"/>
    </FrameLayout>

    

    <GridLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="3"
        android:layout_below="@id/mainFrame"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btnDel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#F2BBBB"
            android:elevation="4dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_margin="8dp"
            android:text="Del"
            android:fontFamily="monospace"
            android:textSize="25sp"
            android:textColor="#7732A4"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#F2BBBB"
            android:elevation="4dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_margin="8dp"
            android:text="Add"
            android:fontFamily="monospace"
            android:textSize="25sp"
            android:textColor="#7732A4"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#F2BBBB"
            android:elevation="4dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_margin="8dp"
            android:text="Edit"
            android:fontFamily="monospace"
            android:textSize="25sp"
            android:textColor="#7732A4"/>
    </GridLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To-Do List for 00.00"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_above="@id/mainFrame"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_centerInParent="true"
        android:fontFamily="monospace"
        android:hint="Enter your task here"
        android:textSize="15sp"
        android:visibility="invisible"
        android:imeOptions="actionDone">
    </EditText>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:background="#CA82F8"
        android:fontFamily="monospace"
        android:text="Create"
        android:layout_below="@id/editText1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible">
    </Button>
</RelativeLayout>
